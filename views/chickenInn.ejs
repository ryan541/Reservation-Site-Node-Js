  <body>
    <!-- Start Chicken Section -->
    <section class="Chicken">
      <h1>CHICKEN INN GREAT COMBO!!</h1>
      <div class="flex">
        <% result.forEach(function (item) { %>
        <div class="col-xl-4 col-lg-4 col-md-4 col-sm-6 mrgn"></div>
        <div class="card flex1">
          <img src="Images/<%= item.image %>" alt="img" />
          <div class="food-details">
            <span><%= item.name %></span>
            <div class="description">Description <%= item.description  %></div>
            <div class="price">Price : <%= item.price  %></div>
            <div class="stars">
              <i><img src="images/star.png"/></i>
              <i><img src="images/star.png"/></i>
              <i><img src="images/star.png"/></i>
              <i><img src="images/star.png"/></i>
            </div>
          </div>

          <form action="/cart" method="post">
            <input type="hidden" value="<%= item.id %>" class="add-btn" name="id">
            <input type="hidden" value="<%= item.name %>" class="add-btn" name="name">
            <input type="hidden" value="<%= item.price %>" class="add-btn" name="price">
            <input type="hidden" value="<%= item.sale_price %>" class="add-btn" name="sale_price">
            <input type="hidden" value="<%= item.quantity %>" class="add-btn" name="quantity">
            <input type="hidden" value="<%= item.image %>" class="add-btn" name="image">
            <input type="submit" value="Add to Cart" class="add-btn">
          </form>
          <!-- <button class="add-btn">Add to Cart</button> -->
        </div>

        <%}) %>
